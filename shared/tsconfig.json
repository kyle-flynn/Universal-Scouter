{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es2017",
    "outDir": "./build",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": "./src",
    "alwaysStrict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "types": ["jest", "node"]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules/**/*",
    "src/tests/**/*"
  ]
}